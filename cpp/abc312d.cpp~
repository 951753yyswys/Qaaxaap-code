#include<bits/stdc++.h>
#define mod 998244353
using namespace std;
int dp[3050][7000],c=3050;
string s;
int main()
{
	cin>>s;
	int n=s.size();
	if(s[0]!=')') dp[1][1+c]=1;
	for(int i=2;i<=n;i++) for(int j=-n;j<=n;j++)
	{
		if(s[i-1]!=')'&&j>0) dp[i][j+c]+=dp[i-1][j+c-1];
		if(s[i-1]!='(') dp[i][j+c]+=dp[i-1][j+c+1];
	}
	cout<<dp[n][c];
	return 0;
}
