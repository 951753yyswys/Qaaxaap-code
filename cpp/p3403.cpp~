#include<bits/stdc++.h>
#define int long long
using namespace std;
struct edge
{
	int to,nxt,w;
} e[1000010];
int head[1000100],cnt,vis[1000100],dis[1000010];
inline void add(int u,int v,int w)
{
	cnt++;
	e[cnt].to=v;
	e[cnt].nxt=head[u];
	e[cnt].w=w;
	head[u]=cnt;
}
signed main()
{
	int h,x,y,z;
	cin>>h>>x>>y>>z;
	h--;
	for(int i=0;i<x;i++) add(i,(i+y)%x,y),add(i,(i+z)%x,z);
	memset(dis,0x3f,sizeof(dis));
	dis[0]=0;
	priority_queue<pair<int,int>,vector<pair<int,int>>,greater<pair<int,int>>> q;
	q.push({0,0});
	while(!q.empty())
	{
		int u=q.top().second;
		q.pop();
		if(vis[u]) continue;
		vis[u]=1;
		for(int i=head[u];i;i=e[i].nxt)
		{
			int v=e[i].to;
			//cout<<v<<' ';
			dis[v]=min(dis[v],dis[u]+e[i].w);
			q.push({dis[v],v});
		}
	}
	int ans=0;
	for(int i=0;i<x;i++) if(h<=dis[i]) ans+=(h-dis[i])/x+1;
	cout<<ans;
	return 0;
}
